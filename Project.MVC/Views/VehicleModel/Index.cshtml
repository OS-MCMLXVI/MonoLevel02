@model IEnumerable<Project.MVC.ViewModels.VehicleModelVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Brands list</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.ID })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ModelId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MakeId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ModelId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MakeId)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ModelId }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.ModelId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ModelId })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Back to Brands", "Index", "VehicleMake" )
</p>
