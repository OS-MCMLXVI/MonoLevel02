@model IEnumerable<Project.MVC.ViewModels.VehicleModelVM>

@{
      ViewBag.Title = "IndexModels";
      Layout = "~/Views/Shared/_Layout.cshtml";
      //var _id = ViewBag.ID;
}

<h2>@ViewBag.ID</h2>

<p>
    @Html.ActionLink("Create New",
                                  "CreateModel",
                                  new { id = @ViewBag.ID })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ModelId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MakeId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ModelId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MakeId)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditModel", new { item.ModelId }) |
            @Html.ActionLink("Details", "DetailsModel", new { item.ModelId }) |
            @Html.ActionLink("Delete", "DeleteModel", new { item.ModelId })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Back to Brands List", "IndexMakes")
</p>